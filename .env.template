# ========================================
# AFZ PRODUCTION ENVIRONMENT CONFIGURATION
# ========================================
# 
# IMPORTANT: 
# 1. Copy this file to .env for local development
# 2. Copy this file to .env.production for production deployment
# 3. NEVER commit actual .env files to version control
# 4. Replace all placeholder values with your actual credentials

# ========================================
# SUPABASE CONFIGURATION
# ========================================
# Get these from: https://app.supabase.com/project/YOUR_PROJECT/settings/api
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here

# ========================================
# SUPABASE OAUTH CONFIGURATION
# ========================================
# Site URL (where users will be redirected after OAuth)
SUPABASE_SITE_URL=https://your-domain.com
SUPABASE_REDIRECT_URL=https://your-domain.com/pages/member-hub.html

# Google OAuth Credentials (from Google Cloud Console)
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your-google-oauth-client-secret

# Facebook OAuth Credentials (from Facebook Developers)
FACEBOOK_OAUTH_APP_ID=your-facebook-app-id
FACEBOOK_OAUTH_APP_SECRET=your-facebook-app-secret

# ========================================
# PAYMENT GATEWAY CONFIGURATION
# ========================================

# PayPal Business Account Configuration
# Get these from: https://developer.paypal.com/developer/applications/
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_ENVIRONMENT=sandbox  # Change to 'live' for production
PAYPAL_WEBHOOK_URL=https://your-domain.com/api/webhooks/paypal
PAYPAL_BUSINESS_EMAIL=donations@afz.org.zm

# Stripe Payment Configuration
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret
STRIPE_WEBHOOK_URL=https://your-domain.com/api/webhooks/stripe

# Flutterwave Configuration (For African Payments)
# Get these from: https://dashboard.flutterwave.com/settings/apis
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK-your-flutterwave-public-key
FLUTTERWAVE_SECRET_KEY=FLWSECK-your-flutterwave-secret-key
FLUTTERWAVE_ENCRYPTION_KEY=your-flutterwave-encryption-key
FLUTTERWAVE_WEBHOOK_SECRET=your-flutterwave-webhook-secret
FLUTTERWAVE_WEBHOOK_URL=https://your-domain.com/api/webhooks/flutterwave

# ========================================
# ZAMBIAN MOBILE MONEY CONFIGURATION
# ========================================

# Airtel Money API Configuration
# Contact: Airtel Zambia Business API Team
AIRTEL_MONEY_API_URL=https://openapiuat.airtel.africa  # Use https://openapi.airtel.africa for production
AIRTEL_MONEY_CLIENT_ID=your-airtel-client-id
AIRTEL_MONEY_CLIENT_SECRET=your-airtel-client-secret
AIRTEL_MONEY_GRANT_TYPE=client_credentials
AIRTEL_MONEY_COUNTRY=ZM
AIRTEL_MONEY_CURRENCY=ZMW

# MTN Mobile Money API Configuration
# Contact: MTN Zambia MoMo API Team
MTN_MOMO_API_URL=https://sandbox.momodeveloper.mtn.com  # Use https://momodeveloper.mtn.com for production
MTN_MOMO_PRIMARY_KEY=your-mtn-primary-key
MTN_MOMO_SECONDARY_KEY=your-mtn-secondary-key
MTN_MOMO_API_USER_ID=your-mtn-api-user-id
MTN_MOMO_API_KEY=your-mtn-api-key
MTN_MOMO_COLLECTION_SUBSCRIPTION_KEY=your-mtn-collection-subscription-key
MTN_MOMO_TARGET_ENVIRONMENT=sandbox  # Change to 'production' for live

# Zamtel Kwacha Configuration
# Contact: Zamtel Kwacha API Team
ZAMTEL_KWACHA_API_URL=https://api.zamtel.co.zm/kwacha
ZAMTEL_KWACHA_API_KEY=your-zamtel-api-key
ZAMTEL_KWACHA_CLIENT_ID=your-zamtel-client-id
ZAMTEL_KWACHA_CLIENT_SECRET=your-zamtel-client-secret

# ========================================
# BACKEND SERVICES CONFIGURATION
# ========================================

# Node.js Backend Configuration
NODE_ENV=production  # Use 'development' for local
PORT=3000
API_BASE_URL=https://your-api-domain.com

# Email Service Configuration (Gmail)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=afzcontact@gmail.com
EMAIL_PASS=your-gmail-app-password
EMAIL_FROM='"AFZ Team" <afzcontact@gmail.com>'

# Database Configuration (if using additional databases)
DATABASE_URL=your-database-connection-string

# ========================================
# SECURITY CONFIGURATION
# ========================================

# JWT Secret for additional authentication
JWT_SECRET=your-very-long-random-jwt-secret-key-here
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=https://your-domain.com,https://www.your-domain.com
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# ANALYTICS AND MONITORING
# ========================================

# Google Analytics (Optional)
GOOGLE_ANALYTICS_ID=G-YOUR-GA4-MEASUREMENT-ID

# Sentry Error Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn-here

# ========================================
# DEPLOYMENT CONFIGURATION
# ========================================

# Frontend Deployment URLs
FRONTEND_URL=https://your-domain.com
ADMIN_URL=https://admin.your-domain.com

# SSL Configuration
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# ========================================
# FEATURE FLAGS
# ========================================

# Enable/Disable Features
ENABLE_MOBILE_MONEY=true
ENABLE_INTERNATIONAL_PAYMENTS=true
ENABLE_SOCIAL_LOGIN=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false

# ========================================
# BACKUP AND STORAGE
# ========================================

# AWS S3 (if using for additional storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=afz-backups

# ========================================
# DEVELOPMENT ONLY
# ========================================
# These should be removed in production

# Debug Mode
DEBUG_MODE=false
LOG_LEVEL=info  # error, warn, info, debug

# Test Payment Amounts
TEST_PAYMENT_AMOUNT=1.00
ENABLE_TEST_PAYMENTS=false